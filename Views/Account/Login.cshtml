@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<form method="POST">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input type="text" class="form-control" asp-for="Username" placeholder="Username" />
                <span class="text-danger" asp-validation-for="Username"> </span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input class="form-control" asp-for="Password" placeholder="Password" type="Password" />
                <span class="text-danger" asp-validation-for="Password"> </span>
            </div>
            <div class="form-group">
                <label asp-for="IsPersistent">Remember me</label>
                <input class="form-control" asp-for="IsPersistent" type="checkbox" />
                <span class="text-danger"> </span>
            </div>
            <button class="btn btn-primary" type="submit">Login</button>
        </div>
    </div>
</form>